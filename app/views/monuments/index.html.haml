= link_to "create monument", new_monument_path, class: "button radius success"

- unless @monuments.empty?
  - @monuments.each do |m|
    .row#header
      .small-3.columns
        collection
      .small-3.columns
        name
      .small-3.columns
        description
      .small-1.columns
        public
      .small-2.columns
    .row
      .small-3.columns
        = link_to m.collection.name, collection_path(m.collection) 
      .small-3.columns
        = m.name
      .small-3.columns
        = m.description
      .small-1.columns
        = m.public
      .small-1.columns
        = link_to "edit", edit_monument_path(m), class: "button mini radius"

- else
  Du hast noch keine Monument
  