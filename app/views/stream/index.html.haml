- unless @monuments.empty?
  - @monuments.each do |m|
    - if m.pictures.count > 0 # only show with pictures
      .row.monument_box
        .small-2.columns
          %p= link_to m.name, m
          - m.categories.each do |c|
            %p= c.name
        .small-3.columns
          = m.description
        .small-7.columns
          - m.pictures.each do |p|
            .row 
              .large-8.columns
                = image_tag p.file.url(:medium)
              .large-4.columns
                %p= p.name
                %p= p.description
                %p= p.date
        

- else
  No public monuments
  